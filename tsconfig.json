{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2017",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"noEmit": true,
		"baseUrl": "./src",
		"paths": {
			"*": ["node_modules/*"]
		},
		"typeRoots": ["@globals", "./node_modules/@types"],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "dist"
	}
}
